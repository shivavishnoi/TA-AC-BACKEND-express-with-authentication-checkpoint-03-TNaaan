<% if(expenses.length > 0){ %>
<% expenses.forEach((expense)=>{ %>
<div>
  Expense: <%= expense.expense %><br>
  Amount: <%= expense.amount %><br>
  Date: <%= expense.date.toString().split(" ").splice(1,3).join(" ") %>
</div>
<hr>
<% })%>
<% } %>
