<% if(sources.length > 0){ %>
<% sources.forEach((source)=>{ %>
<div>
  Source: <%= source.source %><br>
  Amount: <%= source.amount %><br>
  Date: <%= source.date.toString().split(" ").splice(1,3).join(" ") %>
</div>
<hr>
<% })%>
<% } %>

