<%- include("partials/header"); %>

<h3>Detailed Logs</h3>
<h5>Filter By</h5>
<form action="/tab/logs/filter?filterBy=date" method="POST">
  From Date: <input type="date" name="startDate" required>
  End Date: <input type="date" name="endDate" required>
  <button type="submit">Filter</button>
</form>
<form action="/tab/logs/filter?filterBy=category"></form>
<a href="/tab/logs">Remove Filters</a>
<h5>Savings</h5>
Savings -> <%= savings %>
<hr>
<h5>Income</h5>

<!-- <div>
